<!DOCTYPE html>

<html>
<head>
  
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <%-include("partials/headImports") -%>
  <style>
    .desc {
        max-width: .2vw !important;
        white-space: nowrap !important;
        text-overflow: ellipsis !important;
        overflow: hidden !important;
    }
  </style>
  
  <script src="/javascripts/admin.js"></script>

</head>

<body class="hold-transition skin-blue sidebar-mini">
    
<div class="wrapper">

  <!-- Main Header -->
  <header class="main-header">
      <%-include("partials/header") -%>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <%-include("partials/sidebar",{docente: query.docente}) -%>
  </aside>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      
      <h1 >        
          <span ><i class="fas fa-chalkboard"></i>Pagina de administracion de bd</span>  
          <small>usuarios, materias, cursos, guias, labs, etc.</small>
      </h1>
      <ol class="breadcrumb">
          <li><a href="/home?docente=<%= query.docente%>"><i class="fas fa-home"></i> Inicio</a></li>
          <li class="active">Admin</li>
      </ol>
      
    </section>
    
    <!-- Main content -->
    <section class="content container-fluid">
      <div class="row">
     
        <div class="col-xs-12">
          <div class="box box-primary box-solid collapsed-box">
            <div class="box-header with-border">
              
              <h2 class="box-title text-bold "><i class="fas fa-users"></i> USUARIOS </h2>

              <div class="box-tools pull-right">                  
                <button type="button" id="usuarios" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                </button>
              </div>            
              <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body" >
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Nuevo usuario</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" id="formUsuario" class="form-horizontal" method="POST">
                  <div class="box-body col-sm-10">
                    <div class="form-group">
                      <label for="nombre" class="col-sm-2 control-label">Nombre y Apellidos</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" name="nombre" placeholder="nombre"  required>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="email"  class="col-sm-2 control-label">Correo</label>
                      <div class="col-sm-10"><input type="email" class="form-control" name="email" placeholder="Enter email" required></div>
                    </div>
                    <div class="form-group">
                      <label for="password"  class="col-sm-2 control-label">Password</label>
                      <div class="col-sm-10"><input type="password" class="form-control" name="password" placeholder="Password" required></div>
                    </div>
                    <div class="form-group">
                      <label for="telefono"  class="col-sm-2 control-label">telefono</label>
                      <div class="col-sm-10"><input type="number" class="form-control" name="telefono" placeholder="telefono" ></div>
                    </div>
                    <div class="form-group">
                      <label for="ci"  class="col-sm-2 control-label">ci</label>
                      <div class="col-sm-10"><input type="number" class="form-control" name="ci" placeholder="ci" required></div>
                    </div>
                    <div class="form-group">
                      <label for="rud"  class="col-sm-2 control-label">ru o rd</label>
                      <div class="col-sm-10"><input type="number" class="form-control" name="rud" placeholder="ru o rd" required></div>
                    </div>
                    <div class="form-group">
                      <label for="tipo"  class="col-sm-2 control-label">Tipo usuario</label>
                      <div class="col-sm-10">
                      <select name="tipo" class="form-control" required>
                        <option value="estudiante">Estudiante</option>
                        <option value="docente">Docente</option>
                      </select>
                    </div>
                    </div>
                  </div>
                  <!-- /.box-body -->
                  <div class="box-footer col-sm-10">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                  </div>
                </form>
                
              </div>
              <div>
                <div class="col-sm-10 callout callout-danger" style="display: none" id="alertError">
                  <h4>Error al guardar la informacion!</h4>

                  <p id="alertErrorText"></p>
                </div>
              </div>
              <div>
                <div class="col-sm-10 callout callout-success" style="display: none" id="alertOk">
                  <h4 id="alertOkText"></h4>
                </div>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
          <div class="box box-success box-solid collapsed-box">
            <div class="box-header with-border">
              
              <h2 class="box-title text-bold "> <i class="fas fa-book"></i> GUIAS</h2>

              <div class="box-tools pull-right">                  
                <button type="button"   class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                </button>
              </div> 
                            
              <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body" >
              

            </div>
            <!-- /.box-body -->
          </div>
          <div class="box box-info box-solid collapsed-box">
            <div class="box-header with-border ">              
              <h2 class="box-title text-bold "><i class="fas fa-file"></i> ANY</i></h2>

              <div class="box-tools pull-right">                  
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                </button>
              </div>               
              <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body" >
              
            </div>
            <!-- /.box-body -->
          </div>
        </div>
      <!-- /.col -->
      </div>
      <div class="col-sm-12 embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.jdoodle.com/" frameborder="0" ></iframe>
      </div>
      <div class="col-sm-12 embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://ideone.com/" frameborder="0" ></iframe>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  
  <%-include("partials/footer") -%>
  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">

  </aside>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
  immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>


</div>

</body>
</html>